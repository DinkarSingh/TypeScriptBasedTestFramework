{
    "compilerOptions": {
        "module": "commonjs",
        "types": ["node","@wdio/sync", "mocha"],
        "target": "ES2018",
        "moduleResolution": "node", 
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "lib": ["es2017"],
        "declaration": false,
        "noImplicitAny": false,
         "removeComments": true,
        "inlineSourceMap": true,
    },
    "include": [
        "./**/*.ts"
    ]
}